<tr class="<%= task.parent? ? 'border-top' : '' %>">
  <td class="<%= task.sub_task? ? 'ps-5 pt-0' : '' %>">
    <span class="text-<%= task.css_color %>"> <%= task.symbol %> </span>
    <% if task.done? %>
      <s class="text-muted"> <%= task.description %> </s>
    <% else %>
      <%= task.description %>
    <% end %>
  </td>

  <td class="<%= task.sub_task? ? 'ps-4 pt-0 fst-italic' : '' %>"><%= l task.due_date %></td>

  <td class="text-end pe-0 <%= task.sub_task? ? 'pt-0' : '' %>">
    <% if task.parent? %>
      <%= link_to 'ï¼‹ Sub-tarefa', new_task_path(parent_id: task.id), class: 'btn btn-sm btn-success' %>
    <% end %>

    <%= link_to 'Editar', edit_task_path(task), class: 'btn btn-sm btn-secondary' %>

    <%= link_to 'Apagar', task, method: :delete, class: 'btn btn-sm btn-danger',
      data: { confirm: 'Tem certeza que deseja apagar esta tarefa?' } %>
  </td>
</tr>
